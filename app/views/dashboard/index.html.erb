
<div class="dashboard">
	
	<div class="container" id="transactions">
		<h2 class="text-center">Transactions Info</h2>
		<select class="float-right">
			<option>Today</option>
			<option>Weekly</option>
			<option>Monthly</option>
			<option>Quarterly</option>
			<option>Yearly</option>
		</select>
		<div class="row">
			<div class="col-sm-7 offset-sm-2">	
				<canvas id="ordersCompareChart" width="400"></canvas>
			</div>
			<div class="col-sm-3">
				<h1><%= @transactions_count %></h1>
			</div>
		</div>
	</div>

	<div class="container" id="users">
		<h2 class="text-center">Users Info</h2>
		<div class="row">
			<div class="col-sm-8 offset-sm-2">	
				<canvas id="ordersCompareChart2" width="400"></canvas>
			</div>
		</div>
	</div>

	<div class="container" id="revenue">
		<h2 class="text-center">Revenue Info</h2>
		<div class="row">
			<div class="col-sm-8 offset-sm-2">
				<canvas id="ordersCompareChart3" width="400"></canvas>
			</div>
		</div>
	</div>

	<div class="container" id="retention">
		<h2 class="text-center">Retention Info</h2>
		<div class="row">
			<div class="col-sm-8 offset-sm-2">	
				<canvas id="ordersCompareChart4" width="400"></canvas>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		<%= render 'transactions.js.erb' %>
	});
</script>